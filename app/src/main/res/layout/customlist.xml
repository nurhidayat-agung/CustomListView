<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_list_img"
        android:src="@drawable/mobil"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_nama"
        android:layout_marginTop="19dp"
        android:hint="nama mobil"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_list_img"
        android:layout_toEndOf="@+id/iv_list_img"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_pabrik"
        android:layout_marginBottom="18dp"
        android:hint="pabrik"
        android:layout_alignBottom="@+id/iv_list_img"
        android:layout_alignLeft="@+id/txt_nama"
        android:layout_alignStart="@+id/txt_nama" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_tahun"
        android:hint="tahun"
        android:layout_alignTop="@+id/txt_nama"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />
</RelativeLayout>